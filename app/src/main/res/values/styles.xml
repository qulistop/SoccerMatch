<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:background">@color/appBackground</item>
        <item name="recyclerViewStyle">@style/DefaultRecyclerViewStyle</item>
    </style>

    <style name="RedButton" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">#000000</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

    <style name="AlertDialogCustom" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:typeface">normal</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:backgroundTint">@color/appBackground</item>
    </style>

    <style name="DefaultRecyclerViewStyle">

        <item name="layoutManager">androidx.recyclerview.widget.GridLayoutManager</item>
        <item name="android:orientation">vertical</item>
        <item name="spanCount">2</item>

    </style>

    <style name="CardViewStyle">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">5dp</item>
        <item name="cardBackgroundColor">@android:color/background_light</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="PopupMenu" parent="Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:textColor">@color/mainHomeTeam</item>
        <item name="android:textSize">6pt</item>
        <item name="android:listPreferredItemHeightSmall">36dp</item>
    </style>
</resources>
